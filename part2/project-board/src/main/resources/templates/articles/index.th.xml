<?xml version="1.0"?>
<thlogic>
    <attr sel="#header" th:replace="~{header :: header}"/>
    <attr sel="#footer" th:replace="~{footer :: footer}"/>

    <atte sel="#article-table">
        <attr sel="tbody" th:remove="all-but-first">
            <attr sel="tr[0]" th:each="article : ${articles}">
                <attr sel="td.title/a" th:text="${article.title}"
                      th:href="@{'/articles/' + ${article.id}}"></attr>
                <attr sel="td.hashtag" th:text="${article.hashtag}"></attr>
                <attr sel="td.user-id" th:text="${article.nickname}"></attr>
                <attr sel="td.created-by/time" th:datetime="${#temporals.format(article.createdAt, 'yyyy-MM-dd')}"></attr>
            </attr>
        </attr>
    </atte>
</thlogic>
